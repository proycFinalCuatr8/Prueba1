<%- include('layout') %>

<h2>Galería de imágenes</h2>
<div class="row">
  <% if (images.length > 0) { %>
    <% images.forEach(img => { %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <img src="/uploads/<%= img.filename %>" class="card-img-top" alt="Imagen">
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p>No hay imágenes aún.</p>
  <% } %>
</div>

<%- include('footer') %>
